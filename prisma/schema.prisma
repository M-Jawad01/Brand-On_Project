// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  AGENT
  CUSTOMER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Add relations as needed, e.g., listings, gallery items
  listings   Listing[]
  galleryItems GalleryItem[]

  @@map("users")
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Float?   // Base price, price per sq ft logic to be handled in app logic
  areaSqFt    Float?
  location    String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("listings")
}

model GalleryItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String?
  imageUrl    String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gallery_items")
}